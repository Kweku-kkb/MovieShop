@model ApplicationCore.Models.GenreDetailsResponseModel

@{
    ViewData["Title"] = "Genre Detail Page";
}


<div class="rounded">
    <h1 class="text-center">@Model.Name</h1>
    <div class="container-fluid bg-light">
        <div class="row">
            @foreach (var movie in @Model.Movies)
            {
                <div class="col-3">
                    <partial name="_MovieCard" model="movie" />
                </div>
            }
        </div>
    </div>
</div>